# B-Confident TypeScript Orchestration Layer Configuration

# Server Configuration
PORT=3000
LOG_LEVEL=info
CLUSTER_ID=production-cluster
REGION=us-east-1

# Redis Configuration (for message broker)
REDIS_URL=redis://localhost:6379

# Python Service Integration
PYTHON_SERVICE_URL=http://localhost:8000

# Auto-Scaler Configuration
AUTO_SCALER_MIN_NODES=2
AUTO_SCALER_MAX_NODES=20
AUTO_SCALER_SCALE_UP_THRESHOLD=0.8
AUTO_SCALER_SCALE_DOWN_THRESHOLD=0.3
AUTO_SCALER_COOLDOWN_MS=300000
AUTO_SCALER_EVAL_INTERVAL_MS=60000

# Load Balancer Configuration
LOAD_BALANCER_STRATEGY=weighted
LOAD_BALANCER_HEALTH_CHECK_MS=30000
LOAD_BALANCER_MAX_RETRIES=3
LOAD_BALANCER_TIMEOUT_MS=30000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MS=60000
CIRCUIT_BREAKER_HALF_OPEN_MS=30000
CIRCUIT_BREAKER_WINDOW_MS=300000

# Feature Flags
ENABLE_METRICS=true
ENABLE_DASHBOARD=true